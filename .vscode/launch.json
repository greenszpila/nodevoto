    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "bdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/nodevoto-voting-svc/test/**.test.js"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "outputCapture": "std" // https://github.com/Microsoft/vscode/issues/34702#issuecomment-331237388
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/nodevoto-voting-svc/server.js",
            "env": {
                "GRPC_PORT": "8081"
            },
            "internalConsoleOptions": "openOnSessionStart",
            "outputCapture": "std" // https://github.com/Microsoft/vscode/issues/34702#issuecomment-331237388

        }
    ]
}